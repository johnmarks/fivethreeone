<%= form_for @workout, :html => { :class => "form-horizontal workout" } do |f| %>

    <% if @workout.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :program_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :program_id, :class => 'form-control' %>
    </div>
    <%= error_span(@workout[:program_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :day, :class => 'form-control' %>
    </div>
    <%= error_span(@workout[:day]) %>
  </div>
  <div class="control-group">
    <%= f.label :set_template_base_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :set_template_base_id, :class => 'form-control' %>
    </div>
    <%= error_span(@workout[:set_template_base_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            workouts_path, :class => 'btn btn-default' %>

<% end %>
